<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--스크롤 가능-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--가운데 내용 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <!--목표 영역-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background_12"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <!-- 상단 제목 -->
                <TextView
                    android:id="@+id/reading_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reading_goal"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>


                <!-- 좌측 원형 목표 -->
                <RelativeLayout
                    android:id="@+id/circle_group"
                    android:layout_width="158dp"
                    android:layout_height="156dp"
                    app:layout_constraintTop_toBottomOf="@id/reading_goal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/ellipse_goal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ellipse_goal" />


                    <!--진행률 원-->
                    <com.example.meltingbooks.calendar.view.CircularProgressView
                        android:id="@+id/circle_progress"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_alignTop="@id/ellipse_goal"
                        android:layout_alignStart="@id/ellipse_goal"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"/>

                </RelativeLayout>

                <!-- 목표 1 -->
                <com.example.meltingbooks.calendar.view.GoalProgressView
                    android:id="@+id/goal1_view"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/circle_group"
                    app:layout_constraintStart_toEndOf="@id/circle_group"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    app:goalTitle="@string/goal1"
                    app:goalTitleTextSize="18sp"
                    app:goalUnit="권"
                    app:progressDrawable="@drawable/progress_fill_background1" />

                <!-- 목표 2 -->
                <com.example.meltingbooks.calendar.view.GoalProgressView
                    android:id="@+id/goal2_view"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/goal1_view"
                    app:layout_constraintStart_toStartOf="@id/goal1_view"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    app:goalTitle="@string/goal2"
                    app:goalTitleTextSize="18sp"
                    app:goalUnit="개"
                    app:progressDrawable="@drawable/progress_fill_background2" />

                <!-- 목표 3 -->
                <com.example.meltingbooks.calendar.view.GoalProgressView
                    android:id="@+id/goal3_view"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/goal2_view"
                    app:layout_constraintStart_toStartOf="@id/goal2_view"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    app:goalTitle="@string/goal3"
                    app:goalTitleTextSize="18sp"
                    app:goalUnit="시간"
                    app:progressDrawable="@drawable/progress_fill_background3" />

                <!-- 아이콘 -->
                <ImageView
                    android:id="@+id/detail_goal_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_line_arrow_right"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"/>

                <!--하단 여백-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/goal3_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 달력영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background_12"
                android:layout_margin="20dp">

                <!-- 이전 달 버튼 -->
                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:src="@drawable/ic_line_arrow_left"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" />

                <!-- 월 텍스트 -->
                <TextView
                    android:id="@+id/textMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="July 2025"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/btnPrev"
                    app:layout_constraintEnd_toStartOf="@id/btnNext"
                    app:layout_constraintTop_toTopOf="@id/btnPrev"
                    app:layout_constraintBottom_toBottomOf="@id/btnPrev"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black" />

                <!-- 다음 달 버튼 -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:src="@drawable/ic_line_arrow_right"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" />

                <!-- 요일 영역 -->
                <LinearLayout
                    android:id="@+id/weekdaysRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/btnPrev"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="6dp"
                    android:padding="10dp"
                    />

                <!-- 달력 날짜 영역 -->
                <!-- 날짜 Grid -->
                <GridLayout
                    android:id="@+id/calendarGrid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:alignmentMode="alignBounds"
                    android:useDefaultMargins="false"
                    android:paddingHorizontal="0dp"
                    android:paddingBottom="10dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/weekdaysRow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--날짜별 기록-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background_12"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                <!-- 상단 제목 -->
                <TextView
                    android:id="@+id/goal_by_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7/24 (목) "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>

                <!-- 해당 월 리포트 -->
                <TextView
                    android:id="@+id/btn_monthly_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월별 리포트"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:background="@drawable/round_background_20"
                    android:backgroundTint="#A6FFBCE1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 책 영역 -->
                <LinearLayout
                    android:id="@+id/book_image_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_monthly_report"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clipChildren="false">

                    <!--선택한 날짜의 기록-->
                    <TextView
                        android:id="@+id/bookPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚어떤 책을 읽었나요?"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/checkboxFinished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="완독"
                        android:textSize="14sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:clipChildren="false"
                        >

                        <LinearLayout
                            android:id="@+id/book_list_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:clipChildren="false"
                            />
                    </HorizontalScrollView>

                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/book_image_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 읽은 페이지 수 -->
                <LinearLayout
                    android:id="@+id/page_input_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 오늘은 몇 페이지까지 읽었나요? "
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/edit_page"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_total_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="p"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/page_input_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 읽은 시간 -->
                <LinearLayout
                    android:id="@+id/time_input_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️ 얼마 동안 읽었나요? "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edit_hour"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0"
                        android:gravity="center"
                        android:background="@null"
                        android:textSize="16sp"
                        android:maxLength="2"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간 "
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/edit_minute"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0"
                        android:gravity="center"
                        android:background="@null"
                        android:textSize="16sp"
                        android:maxLength="2"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/time_input_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 책 몇시쯤 읽었는지 표시 -->
                <LinearLayout
                    android:id="@+id/start_time_input_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🕰️ 어느 시간에 읽었나요? "
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 오전/오후 선택 -->
                        <TextView
                            android:id="@+id/spinner_am_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오전/오후"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/edit_start_hour"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="0"
                            android:gravity="center"
                            android:background="@null"
                            android:textSize="16sp"
                            android:maxLength="2"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시 "
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/edit_start_minute"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="0"
                            android:gravity="center"
                            android:background="@null"
                            android:textSize="16sp"
                            android:maxLength="2"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/start_time_input_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <!--하단 여백-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/start_time_input_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--하단 여백-->
            <View
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/goal_setting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>