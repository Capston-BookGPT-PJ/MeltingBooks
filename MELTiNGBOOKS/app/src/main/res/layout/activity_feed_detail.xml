<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feed_background">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/top_bar_background">

        <ImageView
            android:id="@+id/topBarImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/meltingbooks_toplog"
            android:contentDescription="앱 로고" />

        <ImageButton
            android:id="@+id/btn_delete_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete"
            android:contentDescription="수정하기" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/commentInputLayout"
        android:background="@drawable/round_background_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/sample_profile"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_image_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/reviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-03-08"
                    android:textSize="12sp"
                    android:textColor="@color/textColor" />

                <ImageButton
                    android:id="@+id/btn_edit_post"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_edit"
                    android:contentDescription="공유 버튼" />
            </LinearLayout>

            <ImageView
                android:id="@+id/feedImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_background_8"
                android:clipToOutline="true"
                android:visibility="visible"/>

            <include
                android:id="@+id/bookInfoLayout"
                layout="@layout/feed_book_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/reviewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전체 리뷰 내용"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/hashtagContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#meltingbooks"
                android:textSize="14sp"
                android:textColor="@color/text_blue"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/feed_comment"
                    android:contentDescription="댓글 버튼" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/like_Button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/feed_like_button"
                    android:contentDescription="좋아요 버튼" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/commentInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="댓글을 작성하세요"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColor"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/postCommentButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:background="@drawable/feed_comment"
            android:contentDescription="댓글 작성 버튼"
            android:clipToOutline="true"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>