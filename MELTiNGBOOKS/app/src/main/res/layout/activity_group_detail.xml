<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feed_background">

    <!-- 상단 바 -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/top_bar_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/topBarImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/meltingbooks_toplog"
            android:contentDescription="앱 로고" />

        <ImageButton
            android:id="@+id/btn_delete_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete"
            android:contentDescription="삭제 버튼" />
    </RelativeLayout>

    <!-- 상단바 아래 영역을 스크롤 가능하게 LinearLayout으로 감싸기 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/commentInputLayout"
        android:background="@drawable/round_background_8">
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 그룹 게시글 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 게시글"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 게시글 카드뷰 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 사용자 정보 + 게시글 유형 -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/postUserProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/sample_profile"
                            android:scaleType="centerCrop"
                            android:background="@drawable/profile_image_background"
                            android:layout_marginEnd="8dp"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/postUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Group User 1"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:padding="10dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/postDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30분 전"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/postTypeContent"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="토론 게시글"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/edittext_background"
                            android:textColor="#666666"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:minHeight="28dp" />

                        <ImageButton
                            android:id="@+id/btn_edit_post"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/ic_edit"
                            android:contentDescription="수정 버튼" />
                    </LinearLayout>

                    <!-- 게시글 내용 -->
                    <TextView
                        android:id="@+id/postTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="인생책 추천해 주세요."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/postContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소설책 좋아합니다."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                    <!-- 피드 사진 -->
                    <ImageView
                        android:id="@+id/groupImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/round_background_8"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/groupWriteContent" />


                    <!-- 하단 아이콘 -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <ImageView
                            android:id="@+id/comment_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/group_chatbtn"
                            android:clipToOutline="true"/>

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp"
                            android:textColor="@color/textColor"
                            android:layout_margin="2dp"/>

                        <ImageView
                            android:id="@+id/like_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/feed_like_button"
                            android:clipToOutline="true"/>

                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp"
                            android:textColor="@color/textColor"
                            android:layout_margin="2dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/bottom_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 댓글 목록 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp"/>


        </LinearLayout>
    </ScrollView>
    <!-- 댓글 입력창 -->
    <LinearLayout
        android:id="@+id/commentInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="10dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="댓글을 작성하세요"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColor"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/postCommentButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/feed_comment"
            android:clipToOutline="true"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
