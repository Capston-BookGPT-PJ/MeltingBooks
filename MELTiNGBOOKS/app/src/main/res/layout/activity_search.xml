<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_white"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textSize="18sp"
            android:inputType="text"
            android:imeOptions="actionSearch" />

        <ImageButton
            android:id="@+id/searchIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/browse_search"
            android:background="@android:color/transparent"
            android:contentDescription="검색" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <!-- 도서 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="15sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <View
                android:id="@+id/barBook"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="visible"/>
        </LinearLayout>

        <!-- 감상문 추가-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnReview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="감상문"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/barReview"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 사용자 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnUser"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="사용자"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/barUser"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 그룹 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnGroup"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="그룹"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <View
                android:id="@+id/barGroup"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 해시태그-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnHashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="해시태그"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <View
                android:id="@+id/barHashtag"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 도서 옵션 -->
    <RadioGroup
        android:id="@+id/layout_book_options"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/radio_book1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:buttonTint="#AAAAAA"
            android:textSize="14sp"
            android:text="평점순"/>

        <RadioButton
            android:id="@+id/radio_book2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:buttonTint="#AAAAAA"
            android:textSize="14sp"
            android:text="출판일"/>

        <RadioButton
            android:id="@+id/radio_book3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:buttonTint="#AAAAAA"
            android:textSize="14sp"
            android:text="인기순"/>
    </RadioGroup>


    <!-- 검색 결과 영역: 스크롤 가능 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/resultScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@drawable/round_background_20">

        <FrameLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- 도서 검색 결과 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>


            <!-- 감상문 검색 결과 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>

            <!-- 사용자 검색 결과 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularUsersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>

            <!-- 그룹 검색 결과 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularGroupsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>

            <!-- 해시태그 검색 결과 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchHashtagRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>

            <!-- 전체를 LinearLayout으로 감싸서 세로 배치 -->
            <LinearLayout
                android:id="@+id/hashTagInfoSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <!--  정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/searchItemIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/search_hashtag_icon"
                        android:contentDescription="검색 아이콘"
                        android:layout_marginEnd="20dp" />

                    <TextView
                        android:id="@+id/searchItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="검색 결과"
                        android:textSize="18sp"
                        android:textColor="@color/textColor"
                        android:layout_weight="1" />

                </LinearLayout>
                <!-- 구분선 -->
                <View
                    android:id="@+id/bottom_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DDDDDD"
                    android:layout_marginTop="20dp" />

                <!-- 리뷰 영역 배경 감싸기 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_background_20_white">

                    <!-- 리뷰 -->
                    <TextView
                        android:id="@+id/reviewHeader2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="리뷰"
                        android:gravity="center|center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/textColor"
                        android:background="@drawable/round_background_15_gray"
                        android:paddingBottom="8dp" />

                    <!-- 리뷰 RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reviewRecyclerView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
