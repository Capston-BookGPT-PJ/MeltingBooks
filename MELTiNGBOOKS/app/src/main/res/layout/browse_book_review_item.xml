<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:backgroundTint="@color/cardBackground"
    app:shapeAppearanceOverlay="@style/RoundedCard2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <!-- 리뷰란 -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile_image_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_profile2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.476" />



        <!-- 헤더 레이아웃: 수직으로 변경 -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 별점 -->
            <RatingBar
                android:id="@+id/bookRatingBar"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="4"
                android:isIndicator="true"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                style="?android:attr/ratingBarStyleSmall"
                android:scaleX="1.2"
                android:layout_marginBottom="4dp"
                android:progressTint="@android:color/holo_orange_light"/>

            <!-- Username + 리뷰 날짜 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/reviewDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="방금 전"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 리뷰 내용 -->
        <TextView
            android:id="@+id/reviewContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="This is a sample review content."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/iconContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintVertical_bias="0.0" />

        <!-- 하단 아이콘 -->
        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
